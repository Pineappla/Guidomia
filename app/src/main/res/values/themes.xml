<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Guidomia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="textView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="textView.large">
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="textView.large.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textView.title">
        <item name="android:textSize">@dimen/text_size_21</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textView.header">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/stencil_bold</item>
    </style>

    <style name="editText" parent="ThemeOverlay.Material3.TextInputEditText.FilledBox">
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textBoxFilled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:elevation">@dimen/margin_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/margin_8</item>
        <item name="boxCornerRadiusTopStart">@dimen/margin_8</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/margin_8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/margin_8</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="android:layout_height">@dimen/small_touch_size</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>
</resources>